# WakeSafe AI Server Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
USE_DATABASE=false
USE_REDIS=false

# WakeSafe API Configuration
WAKESAFE_API_URL=http://localhost:5000
WAKESAFE_API_TOKEN=your_wakesafe_api_token_here

# AI Model Configuration
MODELS_DIR=models
HAAR_CASCADE_FACE=models/haarcascade_frontalface_default.xml
HAAR_CASCADE_EYE=models/haarcascade_eye.xml
DLIB_SHAPE_PREDICTOR=models/shape_predictor_68_face_landmarks.dat
MOBILENET_MODEL=models/fatigue_detection_model.tflite

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=wakesafe_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Google Cloud Storage
GCS_BUCKET=wakesafe-bucket
GCS_CREDENTIALS_PATH=config/gcp-key.json

# Security
AI_SERVER_SECRET_KEY=your_ai_server_secret_key_here

# Processing Configuration
MAX_BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10
PROCESSING_TIMEOUT=30

# Performance Configuration
IMAGE_RESIZE_WIDTH=640
IMAGE_RESIZE_HEIGHT=480
ENABLE_GPU=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_server.log

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

